/********* 主讲开始 ***********/
.cc-speaker-content{
    height:150px;
    line-height:150px;
    padding-left: 20px;
    background-color: rgba(66, 185, 131, 0.1);
    box-shadow: 2px 2px 6px #0d5a37;
    margin: 37px 0;
    position: relative;
}
.cc-speaker{
    font-size: 16px;
    font-weight:bold;
}
.cc-wrap {
	width:100%;
	height:150px;
	position:absolute;
	top:-8px;
	left:8px;
	overflow:hidden;
}
.cc-wrap:before {
	content:"";
	display:block;
	border-radius:8px 8px 0px 0px;
	width:40px;
	height:8px;
	position:absolute;
	right:84px;
	background:#4D6530;
}
.cc-wrap:after {
	content:"";
	display:block;
	border-radius:0px 8px 8px 0px;
	width:8px;
	height:40px;
	position:absolute;
	right:0px;
	top:84px;
	background:#4D6530;
}
.cc-stage{
    display: inline-block;
    text-align: center;
    width: 200px;
    height: 36px;
    line-height: 36px;
    position: absolute;
    top: 30px;
    right: -60px;
    z-index: 2;
    overflow: hidden;
    transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
    -o-transform: rotate(45deg);
    border: 1px dashed;
    box-shadow: 0 0 0 3px #57DD43, 0px 21px 5px -18px rgba(0,0,0,0.6);
    background: #57DD43;
}


