    $color = #15a053;
    background-color: rgba($color,0.1);
     box-shadow: 2px 2px 6px $color;
    .cc-speaker{
        color: $color;
    }
    .cc-wrap:before,
    .cc-wrap:after{
        background: $color * .6;
    }
    .cc-stage{
        background: $color;
        box-shadow: 0 0 0 3px  $color, 0px 21px 5px -18px rgba($color,0.6);
        color: $color* 0.4;
    }
}
